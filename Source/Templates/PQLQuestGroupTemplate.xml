<Ui>
    <!--
        PQLEditBoxTemplate : EditBox with the option to set a placeholder.
        PQLManagerCategoryTemplate : Display for a category in the Manager panel.
        PQLButtonTemplate : A simple button.
    -->
    <Frame name="PQLQuestGroupTemplate" virtual="true">
        <Frames>
            <Button parentKey="title" inherits="PQLQuestGroupTitleTemplate"></Button>
        </Frames>
    </Frame>

    <Button name="PQLQuestGroupTitleTemplate" virtual="true">
        <Size y="24"/>

        <Anchors>
            <Anchor point="TOPLEFT" />
            <Anchor point="TOPRIGHT" x="-34" />
        </Anchors>

        <Layers>
            <Layer level="ARTWORK">
                <FontString parentKey="titleText" inherits="GameFontNormal" />
            </Layer>
        </Layers>

        <!-- "Add Quest" button will be added here using a script. -->
    </Button>
</Ui>